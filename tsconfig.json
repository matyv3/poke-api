{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"lib": ["es6", "dom"],
		"outDir": "./build",
		"rootDir": "./src",
		"strict": true,
		"moduleResolution": "node",
		"baseUrl": "src",
		"paths": {
			"@api/*": ["api/*"],
			"@config/*": ["config/*"]
		},
		"types": ["reflect-metadata", "jest"],
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"suppressImplicitAnyIndexErrors": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts"]
}
