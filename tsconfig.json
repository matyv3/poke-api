{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"outDir": "./build",
		"rootDir": "./src",
		"moduleResolution": "node",
		"baseUrl": "src",
		"paths": {
			"@api/*": ["api/*"],
			"@config/*": ["config/*"],
			"@core/*": ["core/*"]
		},
		"esModuleInterop": true,
		"sourceMap": true,
		"strict": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"suppressImplicitAnyIndexErrors": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts"]
}
